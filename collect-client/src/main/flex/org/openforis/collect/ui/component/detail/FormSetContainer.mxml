<?xml version="1.0" encoding="utf-8"?>
<mx:ViewStack xmlns:fx="http://ns.adobe.com/mxml/2009" 
			  xmlns:s="library://ns.adobe.com/flex/spark" 
			  xmlns:mx="library://ns.adobe.com/flex/mx" 
			  width="100%" height="100%"
			  >
	
	<fx:Script>
		<![CDATA[
			import mx.utils.StringUtil;
			
			import org.openforis.collect.metamodel.proxy.EntityDefinitionProxy;
			import org.openforis.collect.metamodel.proxy.ModelVersionProxy;
			import org.openforis.collect.metamodel.proxy.SurveyProxy;

			private var _forms:Dictionary = new Dictionary();
			
			/**
			 * Return true if the form for teh specified version / entity definition has been generated
			 * */
			public function containsForm(entity:EntityDefinitionProxy, version:ModelVersionProxy):Boolean {
				var form:FormSetRenderer = getFormSetPresenter(entity, version);
				var result:Boolean = form != null;
				return result;
			}
			
			/**
			 * Add the form to the stack
			 * */
			public function addFormSetRenderer(form:FormSetRenderer, entity:EntityDefinitionProxy, version:ModelVersionProxy):void {
				var key:String = getFormSetKey(entity, version);
				_forms[key] = form; 
				this.addElement(form);
			}
			
			/**
			 * Return the form for the given version and entity definition, null if it has not been created yet. 
			 * */
			public function getFormSetRenderer(entity:EntityDefinitionProxy, version:ModelVersionProxy):FormSetRenderer {
				var key:String = getFormSetKey(entity, version);
				for (var formKey:String in _forms) {
					if ( key == formKey ) {
						var form:FormSetRenderer = _forms[key] as FormSetRenderer;
						return form;
					}
				}
				return null;
			}
			
			/**
			 * Show the the form for the given version and entity definition
			 * */
			public function setActiveFormSet(entity:EntityDefinitionProxy, version:ModelVersionProxy):FormSetRenderer {
				var form:FormSetRenderer = getFormSetPresenter(entity, version);
				this.selectedChild = form;
				return form;
			}
			
			/**
			 * Remove all forms
			 */
			public function reset():void {
				_forms = new Dictionary();
				this.removeAll();
			}
			
			private function getFormSetKey(entity:EntityDefinitionProxy, version:ModelVersionProxy):String {
				var survey:SurveyProxy = entity.survey;
				var versionId:int = version == null ? 0: version.id;
				var key:String = StringUtil.substitute("{0};{1};{2}", survey.id, entity.id, versionId);
				return key;
			}
			
		]]>
	</fx:Script>
	
</mx:ViewStack>
